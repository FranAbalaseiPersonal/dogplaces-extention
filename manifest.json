{
  "manifest_version": 3,
  "name": "DogPlaces â€“ Dog-Friendly Restaurants",
  "version": "0.0.2",
  "description": "Shows if a restaurant on Google Maps is dog-friendly.",
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/maps/*"],
      "js": ["content.js"],
      "css": ["dogplaces.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/dog-places-logo.png"],
      "matches": ["<all_urls>"]
    }
  ],
   "permissions": ["storage"]
}
